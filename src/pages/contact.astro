---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are always here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800 dark:text-inherit">
          Contact Us
        </h2>
        <p class="text-lg leading-relaxed -500 mt-3">
          Have something to say? We are here to help. Fill up the form or send
          an e-mail or phone call. Standard Hours Applied.
        </p>
        <div class="mt-5">
          <div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-inherit">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Kuala Lumpur, Malaysia</span>
          </div><div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-inherit">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:enquiry@tankashing.com.com">enquiry@tankashing.com</a
            >
          </div><div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-inherit">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+60 16 2200226">+6016-2200226</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
